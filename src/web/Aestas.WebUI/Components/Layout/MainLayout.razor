@inherits LayoutComponentBase

<FluentDesignTheme @bind-Mode="@Mode" OfficeColor="OfficeColor.Access" StorageName="theme" />

<FluentLayout>
    <FluentHeader Class="siteheader">
        <FluentLabel Typo="Typography.Header">Aestas.WebUI</FluentLabel>
        <FluentSpacer />
        <FluentSwitch ValueChanged="@OnModeChanged" Label="Dark Mode" />
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        Aestas @version
        -
        Powered by .NET @Environment.Version
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />

@code {
    public DesignThemeModes Mode { get; set; }
    void OnModeChanged(bool mode)
    {
        if (mode) Mode = DesignThemeModes.Dark;
        else Mode = DesignThemeModes.Light;
    }
}
